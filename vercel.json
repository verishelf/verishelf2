{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/dashboard/:path*",
      "destination": "/dist/index.html"
    },
    {
      "source": "/dashboard",
      "destination": "/dist/index.html"
    }
  ],
  "routes": [
    {
      "src": "/dashboard/assets/(.*)",
      "dest": "/dist/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/style.css",
      "dest": "/website/style.css"
    },
    {
      "src": "/main.js",
      "dest": "/website/main.js"
    },
    {
      "src": "/",
      "dest": "/website/index.html",
      "headers": {
        "Content-Type": "text/html"
      }
    }
  ]
}

